<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ppjun.gank">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.ppjun.gank.view.GankApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ppjun.gank.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.PictureActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".view.H5Activity"
                  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".view.DetailInfoActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>